<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal"
    tools:context=".MainUsuarioActivity">

    <Button
        android:id="@+id/btnJugar"
        android:layout_width="205dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/btn_bordes_redondos2"
        android:text="JUGAR"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPuntajes"
        android:layout_width="205dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/btnJugar"
        android:layout_below="@+id/btnJugar"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bordes_redondos"
        android:text="PUNTAJES"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="205dp"
        android:layout_height="73dp"
        android:layout_alignEnd="@+id/btnJugar"
        android:layout_below="@+id/btnPuntajes"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bordes_redondos1"
        android:text="SALIR"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Bienvenido"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#131946"
            android:textSize="30sp" />



    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltanimacion"
        android:layout_width="149dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        app:lottie_fileName="play_button.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="false" />

    <ImageView
        android:layout_width="225dp"
        android:layout_height="204dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/personajes_fondoprincipal" />

    <ImageView
        android:layout_width="177dp"
        android:layout_height="127dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/letranumero_fondoprincipal" />

</RelativeLayout>