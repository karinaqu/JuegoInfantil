<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_principal"
    android:layout_height="match_parent"
    tools:context=".MainPrincipalActivity">


        <TextView
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="142dp"
        android:visibility="invisible"
        android:gravity="center"
        android:text="Bienvenid@"
        android:textColor="#000"
        android:textSize="50sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPuntaje"
        android:layout_gravity="center_horizontal"
        android:layout_toStartOf="@+id/imgPuntaje"
        android:text=""
        android:textColor="#fff"
        android:textSize="30sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnJugar"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="32dp"
        android:background="#f82e43"
        android:text="JUGAR"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="139dp"
        android:layout_height="116dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="197dp"
        android:src="@drawable/jugar_pantalla_principal" />



    <ImageView
        android:id="@+id/imgPuntaje"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icono_puntaje" />



    <ImageView
        android:id="@+id/imgSalir"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icono_salir" />

    <ImageView
        android:layout_width="284dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/personajes_fondoprincipal" />




</RelativeLayout>