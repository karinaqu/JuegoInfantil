<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_principal"
    android:layout_height="match_parent"
    tools:context=".MainPrincipalActivity">

    <LinearLayout
        android:layout_width="236dp"
        android:layout_height="505dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="40dp"
            android:text=""
            android:textColor="#ffff"
            android:textSize="30sp" />


        <Button
            android:id="@+id/btnJugar"
            android:layout_width="283dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="#eb0a0a"
            android:text="JUGAR"

            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnPuntajes"
            android:layout_width="276dp"
            android:layout_height="73dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="#8b0ede"
            android:text="PUNTAJES"
            android:textColor="@android:color/white"
            android:textSize="30sp" />



    </LinearLayout>

    <ImageView
        android:layout_width="290dp"
        android:layout_height="315dp"
        android:src="@drawable/personajes_fondoprincipal" />

    <ImageView
        android:id="@+id/imgSalir"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icono_salir" />


</RelativeLayout>